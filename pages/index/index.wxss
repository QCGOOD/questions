/**index.wxss**/

.index {
   height: 100%; 
  /* background: linear-gradient(to bottom, #f55970, #f6a3e9); */
  background-color: #362387;
  /* padding-bottom: 30rpx; */
}

.image {
  width: 50%;
  height: 320rpx;
  margin: 0 auto;
}
.random-questions {
  height: 430rpx; 
  display: flex;
  align-items: flex-end;
  /* margin-bottom: 20rpx; */
}
.random-questions-box {
  width: 100%;
  background-color: #fff;
  margin: 0 30rpx 0 30rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 5rpx 0rpx #da749e;
  height: 200rpx;
  position: relative;
  padding: 30rpx;
}
.random-questions-box-text {
  color: #362387;
  padding: 30rpx;
  font-size: 34rpx;
}
.random-questions-textarea {
  width: 100%;
  height: 170rpx;
  /* font-weight: bold; */
  font-size: 40rpx;
  line-height: 50rpx;
}
.random-questions-box-btn {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 0 30rpx 20rpx 0;
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  width: 100%;
}
.random-questions-box-btn-item {
  font-size: 28rpx;
  display: inline-flex;
  align-items: center;
}
.random-questions-box-btn-item:last-child {
  margin-left: 40rpx;
}
.random-questions-box-btn-item-img {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.icon-maikefeng1 {
  /* color: #fff; */
  font-size: 35rpx;
  height: 35rpx;
}
.icon-suiji {
  font-size: 35rpx;
  height: 35rpx;
}


.questions {
   height: 430rpx; 
  /* background: #666; */
  text-align: center;
}
.questions-text {
  color: #fff;
}
.questions-title-text {
  font-size: 34rpx;
}
.questions-title-text-again {
  font-size: 34rpx;
  border-bottom: 1rpx solid #fff;
}
.questions-desc-text {
  font-size: 24rpx;
  margin-top: 10rpx;
}
.sound {
  height: 320rpx;
  padding-top:20rpx;
}
.circle {
  position: relative;
  height: 320rpx;
}
.circle-item {
  transition: all .5s;
}
.circle-item:before {
  content: '';
  position: absolute;
  border: 2px solid #fff;
  border-radius: 50%; 
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.5);
}
.circle_1:before {
  width: 600rpx;
  height: 600rpx;
}
.circle_2:before {
  width: 540rpx;
  height: 540rpx;
}
.circle_3:before {
  width: 480rpx;
  height: 480rpx;
}
.circle_4:before {
  width: 420rpx;
  height: 420rpx;
}
.opacity_1 {
  opacity: .1;
}
.opacity_2 {
  opacity: .3;
}
.opacity_3 {
  opacity: .5;
}
.opacity_4 {
  opacity: .7;
}
.circle-solid {
  width: 360rpx;
  height: 360rpx;
  background-color: rgb(216,89,64);
  position: absolute;
  border-radius: 50%; 
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.5);
}
.circle-solid-border {
  width: 300rpx;
  height: 300rpx;
  border: 1px solid #fff;
  position: absolute;
  border-radius: 50%; 
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.circle-solid-img-sound {
  position: absolute;
  border-radius: 50%; 
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
}
.circle-solid-img-play {
  position: absolute;
  border-radius: 50%; 
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 150rpx;
}

.icon-maikefeng,
.icon-bofang, 
.icon-weibiaoti519 {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.icon-maikefeng {
  color: #fff;
  font-size: 230rpx;
  height: 230rpx;
}
.icon-bofang {
  color: #fff;
  font-size: 200rpx;
  height: 200rpx;
  width: 200rpx;
}
.icon-weibiaoti519 {
  color: #fff;
  font-size: 230rpx;
  height: 230rpx;
}


.random {
  text-align: right;
  color: #fff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin: 0 30rpx;
}
.random view {
  display: flex;
  align-items: center;
}
.random-img {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.icon-repeat {
  font-size: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.next {
  margin: 30rpx 30rpx 0 30rpx;
  /* height: 110rpx; */
   /* line-height: 110rpx;  */
  border-radius: 15rpx;
  text-align: center;
  background-color: #d85940;
  color: #fff;
}

.my {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #d85940;
  position: absolute;
  top: 340rpx;
  left: -50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 7rpx solid #92425f;
  transition: all .3s;
}
.my-active {
  left: 5rpx;
}
.my image {
  width: 60rpx;
  height: 60rpx;
}
.my .icon-ren12 {
  height: 55rpx;
  font-size: 55rpx;
  color: #fff;
}

.kefu {
  width: 200rpx;
  height: 80rpx;
  background-color: #dbd3ff;
  position: absolute;
  top: 10rpx;
  right: 0;
  border-width: 5rpx;
  border-style: solid;
  border-color: #fff transparent #fff transparent;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.kefu-text {
  text-align: center;
  margin-right: 10rpx;
}
.kefu-text view:first-of-type {
  color: #362387;
  font-size: 32rpx;
}
.kefu-text view:last-of-type {
  color: #362387;
  font-size: 22rpx;
}
.kefu-circle {
  position: absolute;
  left: -50rpx;
  width: 80rpx;
  height: 80rpx;
  background-color: #d85940;
  border-radius: 50%;
  border: 5rpx solid #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-kefu {
  color: #fff;
  font-size: 52rpx;
  height: 52rpx;
}

.kefu-btn {
  width: 250rpx;
  height: 90rpx;
  background-color: transparent;
  position: absolute;
  top: 10rpx;
  right: 0;
}
.kefu-btn::after {
  border: none;
}

