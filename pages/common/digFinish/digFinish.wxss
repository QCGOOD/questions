/* pages/common/digReceive/digReceive.wxss */
@import '../../../lib/style/font.wxss';

.dig-mask {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: rgba(0,0,0,.5);
}

 .dig-finish-close-box {
  position: absolute;
  /* width: 40rpx; */
  height: 780rpx;
  top: 50%;
  right: 50rpx;
  /* left: 50rpx; */
  transform: translate(0, -50%); 
  border-radius: 20rpx;
  background-color: #fff;
} 
.dig-finish-close {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  background-color: #ffb403;
  border-radius: 50%;
  padding: 10rpx;
  border: 3rpx solid #fff;
  box-shadow: -2rpx 3rpx 5rpx #b24935;
}

.dig-finish {
  position: fixed;
  height: 780rpx;
  background-color: #d85940;
  top: 50%;
  left: 50rpx;
  right: 50rpx;
  transform: translate(0, -50%); 
  border-radius: 20rpx;
  overflow: hidden;
}
