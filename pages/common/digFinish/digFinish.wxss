.dig-finish-half {
  position: absolute;
  top: -180rpx;
  left: -20rpx;
  right: -20rpx;
  background-color: #d85940;
  height: 350rpx;
  border-radius: 0 0 50% 50%;
  /* box-shadow: 0 5rpx 5rpx #c6523b; */
  box-shadow: 0rpx 10rpx 10rpx 0rpx #c25039;
}

.dig-finish-info {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 90rpx;
  text-align: center;
  width: 100%;
}

.dig-finish-info-img {
  /* margin-top: 60rpx; */
  width: 125rpx;
  height: 125rpx;
  border-radius: 50%;
  border: 1rpx solid #f0b82c;
}
.dig-finish-info-text {
  color: #ffb403;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.dig-finish-middle {
  position: absolute;
  top: 360rpx;
  color: #ffb403;
  text-align: center;
  width: 100%;
}
.dig-finish-middle view:first-child {
  font-size: 60rpx;
}
.dig-finish-middle view:last-child {
  font-size: 28rpx;
  margin-top: 20rpx;
}

.dig-finish-check {
  position: absolute;
  bottom: 60rpx;
  color: #ffb403;
  font-size: 36rpx;
  left: 50%;
  transform: translate(-50%, 0);
  display: flex;
  align-items: center;
}
.dig-finish-check image {
  width: 33rpx;
  height: 33rpx;
  margin-right: 20rpx;
}

.icon-hongbao {
  color: #ffb403;
  margin-right: 15rpx;
  font-size: 40rpx;
  height: 40rpx;
}