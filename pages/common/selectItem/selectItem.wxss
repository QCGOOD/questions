/* pages/selectItem/selectItem.wxss */

.select-item {
  display: flex;
  background-color: #fff;
  margin: 30rpx 30rpx;
  height: 110rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 3rpx 5rpx 0rpx #332180;
  align-items: center;
  padding: 0 30rpx;
  justify-content: space-between;
}
.item-left {
  color: #000;
  display: inline-flex;
  width: 100%;
}
.item-left-text {
  margin-right: 10rpx;
}
input {
  font-size: 30rpx;
  /* border-bottom: 1rpx solid #dcdcdc; */
  width: 100%;
}

.item-right {
  display: inline-flex;
  flex-flow: column;
  justify-content: center;
  align-items: center;
  flex-shrink: 0;
  margin-left: 20rpx;
}
.item-right-text {
  font-size: 28rpx;
  margin-top: 5rpx;
  color: #999;
}
.icon {
  width: 80rpx;
  height: 80rpx;
}